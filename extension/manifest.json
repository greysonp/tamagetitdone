{
  "manifest_version": 2,

  "name": "tamagetitdone",
  "description": "This extension forces productivity using a tamagotchi.",
  "version": "1.0",

    "content_scripts": [
        {
            "matches": ["http://*/*",
                        "https://*/*"],
            "js": [
                "jquery.min.js",
                "easeljs-0.6.0.min.js",
                "anim.js",
                "action.js",
                "timer.js",
                "tgd.js"
            ],
            "run_at": "document_idle"
        }
    ],

  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],

    "browser_action": {
        "default_popup": "popup.html"
    }
}
