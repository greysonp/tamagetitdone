{
  "manifest_version": 2,

  "name": "tamagetitdone",
  "description": "This extension forces productivity using a tamagotchi.",
  "version": "1.0",

    "content_scripts": [
        {
            "matches": ["http://*/*",
                        "https://*/*"],
            "js": ["action.js",
                    "../js/anim.js",
                    "../js/jquery.min.js",
                    "../js/tgd.js",
                    "../js/timer.js",
                    "../js/createjs/easeljs-0.6.0.min.js",
                    "../js/tweenjs-0.4.0.min.js"],
            "run_at": "document_end"
        }
    ],
  "permissions": [
    "https://secure.flickr.com/"
  ]
}
