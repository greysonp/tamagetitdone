// =========================================
// DEFAULTS
// =========================================
body
    margin 0
    padding 0
    font-family "Raleway"


// =========================================
// PANELS
// =========================================
panelWidth = 250px

.panel-side, .panel-center
    position fixed

.panel-side
    width panelWidth
    height 100%

.panel-right
    right 0

.panel-center
    height 100%
    border-left 1px solid black
    border-right 1px solid black
    input[type=text]
        display block
        width 100%
    ul
        list-style none
        margin 0
        padding 0
    li
        display block
        border-bottom 1px solid black
        padding 15px
        margin 0

@media (max-width: 750px)
    .panel-right
        display none

@media (max-width: 500px)
    .panel-left
        display none

// =========================================
// GENERAL
// =========================================
.text-center 
    text-align center